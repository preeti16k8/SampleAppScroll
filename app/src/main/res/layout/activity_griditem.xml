<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Activity.GriditemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title_nm"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:padding="10dp"
                android:text="Name"
                android:textColor="#0B1D58"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="187dp"
                android:layout_height="183dp"
                android:layout_below="@id/title_nm"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:gravity="start"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="Description"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc"
                android:layout_centerInParent="true"
                android:layout_marginTop="45dp"
                android:padding="1dp"
                android:text="Rs. 11,500/-"
                android:textColor="#000" />


            <Button
                android:id="@+id/buttonbuyno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/desc"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginTop="109dp"
                android:backgroundTint="#0B1D58"
                android:hint="Buy Now"
                android:textColorHint="#FAF8F8" />

            <TextView
                android:id="@+id/title_nm2"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonbuyno"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:padding="10dp"
                android:text="Name"
                android:textColor="#0B1D58"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="187dp"
                android:layout_height="183dp"
                android:layout_below="@id/title_nm2"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/desc2"
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:gravity="start"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="Description"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc2"
                android:layout_centerInParent="true"
                android:layout_marginTop="45dp"
                android:padding="1dp"
                android:text="Rs. 11,500/-"
                android:textColor="#000" />


            <Button
                android:id="@+id/buttonbuyno2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price2"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:backgroundTint="#0B1D58"
                android:hint="Buy Now"
                android:textColorHint="#FAF8F8" />
            <TextView
                android:id="@+id/title_nm3"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonbuyno2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:padding="10dp"
                android:text="Name"
                android:textColor="#0B1D58"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="187dp"
                android:layout_height="183dp"
                android:layout_below="@id/title_nm3"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/desc3"
                android:layout_width="393dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:gravity="start"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="Description"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/desc3"
                android:layout_centerInParent="true"
                android:layout_marginTop="45dp"
                android:padding="1dp"
                android:text="Rs. 11,500/-"
                android:textColor="#000" />


            <Button
                android:id="@+id/buttonbuyno3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price3"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:backgroundTint="#0B1D58"
                android:hint="Buy Now"
                android:textColorHint="#FAF8F8" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
